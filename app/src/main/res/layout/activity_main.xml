<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/titleBtn1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/titleBtn2"
            />

        <Button
            android:id="@+id/titleBtn2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/titleBtn1"
            app:layout_constraintEnd_toStartOf="@+id/titleBtn3"
            />

        <Button
            android:id="@+id/titleBtn3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintStart_toEndOf="@+id/titleBtn2"
            app:layout_constraintEnd_toStartOf="@+id/titleBtn4"
            />

        <Button
            android:id="@+id/titleBtn4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/titleBtn3"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:name="com.example.lab3.StartFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
    </androidx.fragment.app.FragmentContainerView>
</androidx.constraintlayout.widget.ConstraintLayout>